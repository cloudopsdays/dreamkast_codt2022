<%= render 'layout' do %>
  <div class="row">
    <h2>Users</h2>
  </div>
  <div class="row">
    <ul>
      <li>Registered Users: <%= @profiles.count %></li>
      <li>physically attend: <%= @profiles.where(physically_attend: true).count %></li>
    </ul>
  </div>

  <div class="row">
    <h2>Export to CSV</h2>
    <div class="col-12 form-group">
      <%= button_to 'エクスポート', admin_export_profiles_path, {method: :get } %>
    </div>
  </div>

  <div class="row">
    <table class="table table-striped">
      <thead>
      <tr>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Sub</th>
        <th scope="col">Attend</th>
      </tr>
      </thead>
      <tbody>
      <% @profiles.each do |profile| %>
        <tr>
          <td><%= profile.first_name %></td>
          <td><%= profile.last_name %></td>
          <td><%= profile.sub %></td>
          <td><%= profile.physically_attend %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<% end %>
