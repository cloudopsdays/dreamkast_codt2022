<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-12 col-md-6 registration-form py-3 px-md-5">
      <h2>新規登録</h2>
      <div class="block"></div>

      <% if logged_in? %>
        <%= render 'form', profile: @profile %>
      <% else %>
        <div class="col-12 align-self-baseline my-4 justify-content-center text-center">
          <%= button_to 'ログイン / サインアップ', '/auth/auth0', {method: :post, class: "btn btn-xl inline btn-focus"} %>
          <%= label_tag 'entry', '参加登録するにはCloud Operator Days Tokyoへのサインアップが必要です' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
